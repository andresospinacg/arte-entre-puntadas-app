<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Botón Atrás -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Volver"
            android:padding="8dp"
            app:tint="@color/text_dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back" />

        <!-- Botón Cerrar -->
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Cerrar"
            android:padding="8dp"
            app:tint="@color/text_dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="32dp"
            android:contentDescription="Logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back" />

        <!-- Título Bienvenida -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido de nuevo!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión para continuar"
            android:textSize="14sp"
            android:textColor="@color/text_dark_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

        <!-- Campo Email -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/edit_text_background"
            android:hint="Email o usuario"
            android:inputType="textEmailAddress"
            android:paddingStart="48dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/text_medium_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle" />

        <!-- Icono Email -->
        <ImageView
            android:id="@+id/ic_email"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_email"
            android:layout_marginStart="16dp"
            app:tint="@color/text_medium_gray"
            android:contentDescription="Email"
            app:layout_constraintStart_toStartOf="@id/et_email"
            app:layout_constraintTop_toTopOf="@id/et_email"
            app:layout_constraintBottom_toBottomOf="@id/et_email" />

        <!-- Campo Contraseña -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/text_medium_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_email" />

        <!-- Icono Contraseña -->
        <ImageView
            android:id="@+id/ic_lock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lock"
            android:layout_marginStart="16dp"
            app:tint="@color/text_medium_gray"
            android:contentDescription="Contraseña"
            app:layout_constraintStart_toStartOf="@id/et_password"
            app:layout_constraintTop_toTopOf="@id/et_password"
            app:layout_constraintBottom_toBottomOf="@id/et_password" />

        <!-- Icono Mostrar/Ocultar Contraseña -->
        <ImageView
            android:id="@+id/ic_password_toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lock"
            android:layout_marginEnd="16dp"
            app:tint="@color/text_medium_gray"
            android:contentDescription="Mostrar contraseña"
            app:layout_constraintEnd_toEndOf="@id/et_password"
            app:layout_constraintTop_toTopOf="@id/et_password"
            app:layout_constraintBottom_toBottomOf="@id/et_password" />

        <!-- Checkbox Recordarme -->
        <CheckBox
            android:id="@+id/cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recordarme"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_password" />

        <!-- Olvidaste tu contraseña -->
        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu...?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_remember" />

        <!-- Botón Iniciar Sesión -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Iniciar Sesión"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button_rounded_background"
            android:backgroundTint="@color/yellow_primary"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_forgot_password" />

        <!-- Botón Google -->
        <Button
            android:id="@+id/btn_google"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Continuar con Google"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/button_white_border"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_login" />

        <!-- ¿No tienes cuenta? -->
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta? Regístrate"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_google"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>